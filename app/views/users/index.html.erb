<h1><%= @page_title = 'Users' %></h1>
<%= link_to('Add user', new_user_url) %>

<table id="users" class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% current_account.users.each do |user| %>
      <tr>
        <td><%=h user.name %></td>
        <td><%=h user.email %></td>
        <td><%= link_to('Edit', edit_user_path(user)) %></td>
        <td><%= link_to('Delete', user, :data => { :method => 'delete', :confirm => 'Are you sure you want to delete this user?' })unless user == current_user %></td>
      </tr>
    <% end %>
  </tbody>
</table>
